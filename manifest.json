{
    "manifest_version": 3,
    "name": "UniClock Global Time Converter",
    "version": "1.0.0",
    "description": "Convert time between different timezones with friendly interface.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16":  "earth_16.png",
        "48":  "earth_48.png",
        "128": "earth_128.png"
      }
    },
    "permissions": [
      "storage"
    ]
  }
  